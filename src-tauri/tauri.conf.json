{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "AORUS Control Center",
    "version": "0.1.0",
    "identifier": "com.gigabyte.aorus-control-center",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "AORUS Control Center",
                "width": 1100,
                "height": 800,
                "minWidth": 900,
                "minHeight": 700
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "category": "Utility",
        "shortDescription": "AORUS Laptop Control Center",
        "longDescription": "A modern control center for AORUS/Gigabyte laptops to manage fan speeds, power settings, and performance",
        "linux": {
            "deb": {},
            "appimage": {}
        },
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        }
    }
}
